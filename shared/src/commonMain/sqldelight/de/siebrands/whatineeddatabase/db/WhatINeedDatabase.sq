CREATE TABLE TodoList (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL
);

CREATE TABLE TodoItem (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    todoListId INTEGER NOT NULL,
    name TEXT NOT NULL,
    isDone INTEGER NOT NULL,
    FOREIGN KEY (todoListId) REFERENCES TodoList(id) ON DELETE CASCADE
);

-- Optional: Index auf die TodoListId f√ºr bessere Join-Performance
CREATE INDEX idx_todoitem_todolistid ON TodoItem(todoListId);

selectTodoLists:
SELECT TodoList.*
FROM TodoList;

insertTodoList:
INSERT INTO TodoList(name)
VALUES (?);

selectTodoItems:
SELECT TodoItem.*
FROM TodoItem
WHERE TodoItem.todoListId = ?;